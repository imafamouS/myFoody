<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <corners android:radius="7.0dip" />
            <stroke android:width="1.0px" android:color="#ffcc0000" />
            <gradient android:startColor="#00000000" android:endColor="#00000000" android:centerColor="#00000000" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <corners android:radius="7.0dip" />
            <stroke android:width="1.0px" android:color="#ffaaaaaa" />
            <gradient android:startColor="#00000000" android:endColor="#00000000" android:centerColor="#00000000" />
        </shape>
    </item>
</selector>