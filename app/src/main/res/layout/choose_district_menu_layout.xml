<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_choose_disctrict_parent_menu"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/home_menu_background_color_pressed"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/linear_layout_choose_disctrict_item"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:paddingBottom="6.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="8.0dip"
        android:paddingTop="6.0dip">
        <TextView
            android:id="@+id/text_view_parent_district"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_width="wrap_content"
            android:text="TP.HCM"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <LinearLayout
            android:background="@drawable/border_button_change_district"
            android:id="@+id/linear_layout_change_district"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <ImageView
                android:layout_gravity="right"
                android:layout_height="fill_parent"
                android:layout_marginRight="5.0dip"
                android:layout_width="10.0dip"
                android:paddingBottom="2.0dip"
                android:paddingTop="2.0dip"
                android:src="@drawable/icon_how_far" />

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="5.0dip"
                android:text="@string/TEXT_CHANGE_CITY"
                android:textColor="#ff777777"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>
        <!--Expandable-->
    <!--  <ExpandableListView
          android:id="@+id/list_view_city"
          style="@style/view_match"
          android:layout_height="0dp"
          android:layout_weight="1.0"
          android:background="@color/home_menu_background_color_pressed"
          android:cacheColorHint="@android:color/transparent"
          android:divider="@color/home_new_list_view_line"
          android:dividerHeight="1.0dip"
          android:listSelector="@android:color/transparent" />-->
    <ExpandableListView
        android:id="@+id/list_view_city"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:cacheColorHint="#00000000"
        android:childDivider="#ffeeeeee"
        android:childIndicator="@drawable/icon_arrow_right"
        android:groupIndicator="@null"
        android:indicatorLeft="@null"
        android:divider="@color/home_new_list_view_line"
        android:dividerHeight="1.0dip"
        android:listSelector="@android:color/transparent" />

    <View
        android:background="@color/home_new_list_view_line"
        android:layout_height="1.0dip"
        android:layout_width="fill_parent" />

    <View
        android:background="#ffdddddd"
        android:layout_height="0.100000024dip"
        android:layout_width="fill_parent" />

    <TextView
        android:background="#ffffffff"
        android:gravity="center"
        android:id="@+id/text_view_close_change_district"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10.0dip"
        android:text="@string/TEXT_ACTION_CANCEL"
        android:textColor="@color/micro_site_title_sub"
        android:textSize="@dimen/text_size_title" />
</LinearLayout>